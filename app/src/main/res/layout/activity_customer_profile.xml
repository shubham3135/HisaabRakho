<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".transaction.CustomerProfileActivity">
    <include android:id="@+id/custom_profile_toolbar"
        layout="@layout/app_bar_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/profileBackground"
        android:layout_height="200dp">
        <TextView
            android:id="@+id/profile_title"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/contact_img"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textSize="100sp"
            android:transitionName="logo_transition"
            android:text="S"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/img_background"
                android:src="@drawable/ic_person"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textColor="@color/design_default_color_primary_variant"
                android:textSize="16sp"
                android:alpha="0.7"
                android:text="Name"/>
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:transitionName="name_transition"
                tools:text="Shubham"/>
        </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_right_arrow"
                android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/img_background"
            android:src="@drawable/ic_call"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textColor="@color/design_default_color_primary_variant"
                android:textSize="16sp"
                android:alpha="0.7"
                android:text="Add Mobile Number"/>
            <TextView
                android:id="@+id/profile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:text="7900148057"/>
        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_right_arrow"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/img_background"
            android:src="@drawable/ic_location"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:padding="5dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textColor="@color/design_default_color_primary_variant"
                android:textSize="16sp"
                android:alpha="0.7"
                android:text="Add Address"/>
            <TextView
                android:id="@+id/profile_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone"
                android:text="Dumri, Giridih, Jharkhand, 827010"/>
        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_right_arrow"
            android:layout_gravity="center"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:padding="10dp">
        <Button
            android:id="@+id/profile_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:paddingVertical="12dp"
            style="@style/ButtonBorder"
            android:text="Delete Customer"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>