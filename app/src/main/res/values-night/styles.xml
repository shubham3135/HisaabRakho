    </style>

    <style name="ButtonBorder" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/colorPrimaryGave</item>
        <item name="drawableTint">@color/colorPrimaryGave</item>
        <item name="strokeColor">@color/colorPrimaryGave</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/colorRippleDelete</item>
        <item name="icon">@drawable/ic_delete</item>
        <item name="iconTint">@color/colorPrimaryGave</item>
        <item name="iconPadding">10dp</item>
        <item name="iconGravity">textStart</item>
