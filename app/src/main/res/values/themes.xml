<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HisaabRakho" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentDark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/colorText</item>

        <item name="android:colorControlHighlight">@color/colorRipple</item>
        <item name="colorControlActivated">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HisaabRakho.Gave" parent="Theme.HisaabRakho">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryGave</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDarkGave</item>
        <item name="android:textColor">@color/black</item>
        <item name="drawableTint">@color/colorPrimaryGave</item>

        <item name="colorControlActivated">@color/colorPrimaryGave</item>

        <!--Enable window content transition-->
        <!--<item name="android:windowContentTransitions">true</item>-->
    </style>

    <style name="Theme.HisaabRakho.Got" parent="Theme.HisaabRakho">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryGot</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDarkGot</item>
        <item name="android:textColor">@color/black</item>
        <item name="drawableTint">@color/colorPrimaryGot</item>

        <item name="colorControlActivated">@color/colorPrimaryGot</item>

        <!--Enable window content transition-->
        <!--<item name="android:windowContentTransitions">true</item>-->
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>
</resources>